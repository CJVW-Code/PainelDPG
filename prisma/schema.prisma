generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String              @id @default(uuid()) @db.Uuid
  name        String
  description String
  area        String
  status      String
  progress    Int
  startDate   DateTime
  endDate     DateTime
  priority    String
  featured    Boolean             @default(false)
  image       String?
  imagePosition String?           @db.VarChar(16)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  visibility  ProjectVisibility   @default(PUBLIC)
  createdById String?             @db.Uuid
  createdBy   User?               @relation("ProjectCreator", fields: [createdById], references: [id], onUpdate: NoAction)
  accessRules ProjectAccessRule[]
  team        ProjectMember[]
  files       ProjectFile[]
  tasks       ProjectTask[]
  comments    ProjectComment[]
  timeline    ProjectTimelineEntry[]

  @@index([createdById], map: "idx_project_createdby")
}

model User {
  id                 String              @id @default(uuid()) @db.Uuid
  name               String
  email              String              @unique
  avatar             String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdProjects    Project[]           @relation("ProjectCreator")
  permissions        ProjectAccessRule[]
  roles              UserRole[]
  tasksResponsibleFor ProjectTask[]      @relation("TaskResponsible")
  projectComments    ProjectComment[]    @relation("CommentAuthor")
}

model Role {
  id          String              @id @default(uuid()) @db.Uuid
  name        String              @unique
  description String?
  level       Int                 @default(0)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  permissions ProjectAccessRule[]
  users       UserRole[]
}

model UserRole {
  userId     String   @db.Uuid
  roleId     String   @db.Uuid
  assignedAt DateTime @default(now())
  role       Role     @relation(fields: [roleId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([userId, roleId])
}

model ProjectAccessRule {
  id        String   @id @default(uuid()) @db.Uuid
  projectId String   @db.Uuid
  userId    String?  @db.Uuid
  roleId    String?  @db.Uuid
  canView   Boolean  @default(true)
  canEdit   Boolean  @default(false)
  canManage Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  role      Role?    @relation(fields: [roleId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([projectId, userId], map: "idx_projectaccessrule_projectid_userid")
}

model TeamMember {
  id        String          @id @default(uuid()) @db.Uuid
  name      String
  role      String
  avatar    String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  projects  ProjectMember[]
}

model ProjectMember {
  projectId    String     @db.Uuid
  teamMemberId String     @db.Uuid
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  teamMember   TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([projectId, teamMemberId])
  @@index([projectId, teamMemberId], map: "idx_projectmember_projectid_teamid")
}

enum ProjectVisibility {
  PUBLIC
  RESTRICTED
}

model ProjectFile {
  id        String              @id @default(uuid()) @db.Uuid
  projectId String              @db.Uuid
  name      String
  url       String
  mimeType  String
  category  ProjectFileCategory @default(ANEXO)
  position  String              @default("center")
  createdAt DateTime            @default(now())
  project   Project             @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([projectId], map: "idx_projectfile_projectid")
}

model ProjectTask {
  id            String            @id @default(uuid()) @db.Uuid
  projectId     String            @db.Uuid
  title         String
  description   String?
  status        ProjectTaskStatus @default(NAO_INICIADA)
  responsibleId String?           @db.Uuid
  startDate     DateTime?
  dueDate       DateTime?
  completedAt   DateTime?
  order         Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  project       Project           @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  responsible   User?             @relation("TaskResponsible", fields: [responsibleId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  timeline      ProjectTimelineEntry[]

  @@index([projectId, status], map: "idx_projecttask_project_status")
}

model ProjectComment {
  id          String   @id @default(uuid()) @db.Uuid
  projectId   String   @db.Uuid
  authorId    String   @db.Uuid
  content     String
  attachments Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  author      User     @relation("CommentAuthor", fields: [authorId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([projectId], map: "idx_projectcomment_projectid")
}

model ProjectTimelineEntry {
  id          String               @id @default(uuid()) @db.Uuid
  projectId   String               @db.Uuid
  taskId      String?              @db.Uuid
  type        ProjectTimelineType  @default(MARCO)
  label       String
  description String?
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  project     Project              @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  task        ProjectTask?         @relation(fields: [taskId], references: [id], onDelete: SetNull, onUpdate: NoAction)

  @@index([projectId], map: "idx_projecttimeline_projectid")
  @@index([taskId], map: "idx_projecttimeline_taskid")
}

enum ProjectTaskStatus {
  NAO_INICIADA
  EM_ANDAMENTO
  CONCLUIDA
}

enum ProjectTimelineType {
  MARCO
  TAREFA
  FASE
}

enum ProjectFileCategory {
  BACKGROUND
  DESTAQUE
  COMPROVACAO
  ANEXO
}
